HL_LAYOUT_TEMPLATE=(
  _PRE    "${IS_SSH+ssh }" # shows "ssh " if this is an ssh session
  USER    '...'
  HOST    ' @ ...'
  VENV    ' with ...'
  PATH    ' : ...'
  _SPACER '' # special, only shows when compact, otherwise fill with space
  BRANCH  ' ...'
  STATUS  ' | ...'
  _POST   ''
)
HL_CONTENT_TEMPLATE=(
  USER   "%{$blue%} ..."
  HOST   "%{$cyan%} ..."
  VENV   "%{$magenta%} ..."
  PATH   "%{$green%} ..."
  BRANCH "%{$yellow%} ..."
  STATUS "%{$white%}..."
)
declare -A HL_GIT_STATUS_SYMBOLS=(
  STAGED    "%{$green%}" # "+"
  CHANGED   "%{$yellow%}" # "!"
  UNTRACKED "%{$faint%}" # "?"
  BEHIND    "%{$red%}" # "↓"
  AHEAD     "%{$magenta%}" #"↑"
  DIVERGED  "%{$red%}󰃻" # "⇕"
  STASHED   "%{$faint%}" # "*"
  CONFLICTS "%{$red%}" # consider "%{$red%}✘"
  CLEAN     "%{$green%}" # consider "✓" or "%{$green%}✔"
)
HL_SEP_MODE='off'
HL_SEP_STYLE=''
HL_TRUNC_SYMBOL='…'
HL_GIT_COUNT_MODE='on'
HL_GIT_SEP_SYMBOL=' '
HL_CLOCK_MODE='on'
HL_CLOCK_SOURCE="date +'%A  %H:%M'"
HL_ERR_MODE='detail'
HL_OVERWRITE='on'
